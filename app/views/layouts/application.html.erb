<!DOCTYPE html>
<html>
  <head>
    <title>Seatyourself</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <% if flash[:notice] %>
        <p id="notice"><%= flash[:notice] %></p>
    <% end %>

    <% if flash[:alert] %>
        <p id="alert"><%= flash[:alert] %></p>
    <% end %>

    <% unless current_page?('/') %>
      <%= link_to "HomePage", root_path %>
    <% end %>

    <div>
      <% if current_user == nil %>
          <p>
            <%= link_to "Log in", new_session_path, class: "button" %> or <%= link_to "Sign up", new_user_path,
                                                                                     class: "button" %>
          </p>

      <% elsif current_user.owner == 0 %>
          <p>
            <%= link_to "User Profile", user_path(current_user)%>
            <%= link_to "Log out", session_path("current"), :method => :delete, class: "button" %>
          </p>
      <% else current_user.owner == 1 %>
          <p>
            <%= link_to "Add Restaurant", new_restaurant_path%>
            <%= link_to "Owner Profile", user_path(current_user)%>
            <%= link_to "Log out", session_path("current"), :method => :delete, class: "button" %>
          </p>
      <% end %>
    </div>


    <%= yield %>

    <footer class="twelve columns">
      <p class="userinfo">
        <% if current_user %>
            Signed in as <%= current_user.first_name%>. <%= link_to "Log out", session_path("current"), :method =>
          :delete %>
        <% else %>

        <% end %>
      </p>
    </footer>

  </body>
</html>

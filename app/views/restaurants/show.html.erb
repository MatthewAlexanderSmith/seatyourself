<div class="six columns">
  <h3><%= @restaurant.name %></h3>

  <p>
    <img src="<%=@restaurant.picture_url%>" alt="">
  </p>

  <p>
    Phone: <%= number_to_phone(@restaurant.phone) %>
  </p>

  <p>
    Address: <%= @restaurant.address %>
  </p>

  <p>
    Description: <%= @restaurant.description %>
  </p>

  <p>
    Capacity: <%= @restaurant.capacity %>
  </p>
</div>


<% if current_user %>
  <div id="reservation">
    <%= render 'reservations/form' %>
  </div>
<% else %>
  <div class="six columns">
    <strong>Please <%= link_to "Log in", new_session_path%> or <%= link_to "Sign Up", new_user_path%> to make a
    reservation.</strong>
  </div>
<% end %>

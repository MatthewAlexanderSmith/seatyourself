

<%= form_for([@restaurant, @reservation]) do |f| %>
  <div class="six columns">
    <%= f.label :reservation_time, "Reservation Time" %>
    <%= f.datetime_select :reservation_time, :default =>{:minute => 0}, :discard_minute => true %>
  </div>

  <div class="six columns">
    <%= f.label :seats, "How Many Seats?" %>
    <%= f.number_field :seats%>
  </div>

  <div class="six columns">
    <%= f.submit "Request", class: "button-primary"%>
  </div>

<% end %>
